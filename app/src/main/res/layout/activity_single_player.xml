<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michalke.app_berufsschule.SinglePlayerActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/buttonRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="right"
            android:src="@drawable/right"
            android:layout_marginTop="315dp"
            android:layout_marginLeft="600dp"/>

        <ImageButton
            android:id="@+id/buttonLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="left"
            android:src="@drawable/left"
            android:layout_marginTop="315dp"
            android:layout_marginLeft="10dp"/>

        <ImageButton
            android:id="@+id/buttonUpperRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="upperRight"
            android:src="@drawable/upperright"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="600dp"/>

        <ImageButton
            android:id="@+id/buttonUpperLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="upperLeft"
            android:src="@drawable/upperleft"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/stickmanMove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stickman"
            android:layout_marginStart="25dp"
            android:layout_marginTop="175dp" />

        <ImageView
            android:id="@+id/goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goal"
            android:layout_marginStart="600dp"/>

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exit"
            android:onClick="exit"
            android:layout_marginStart="625dp"/>

    </RelativeLayout>

</android.widget.RelativeLayout>
