<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michalke.app_berufsschule.Result">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingTop="0dp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="0dp"
        android:layout_alignParentRight="true"
        android:paddingRight="0dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/iLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-40dp"
            android:src="@drawable/logo_bsf" />

        <TextView
            android:id="@+id/tResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="Ergebnis:"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/scoreUserView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:text="username"
            android:textSize="45sp"
            android:textStyle="bold|italic"
            android:textColor="#32CD32"/>

        <TextView
            android:id="@+id/resultView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="time"
            android:textSize="45sp"
            android:textStyle="bold|italic"
            android:textColor="#32CD32"/>

        <TextView
            android:id="@+id/tHighscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:text="Highsore:"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/highscoreUserView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:text="username"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="#FF0000"/>

        <TextView
            android:id="@+id/highscoreView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="425dp"
            android:text="time"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:textColor="#FF0000"/>

        <Button
            android:id="@+id/bBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:onClick="back"
            android:text="ZurÃ¼ck"
            android:textSize="20sp"/>
    </RelativeLayout>
</android.widget.RelativeLayout>
